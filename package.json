{

  "name": "eslint-plugin-personnallinter",
  "version": "2.0.0",
  "description": "Personnal lint rules.",

  "type": "commonjs",
  "typings": "./lib/cjs/main.d.cts",
  "main": "./lib/cjs/main.cjs",

  "exports": {
    ".": {
      "require": {
        "types": "./lib/cjs/main.d.cts",
        "default": "./lib/cjs/main.cjs"
      }
    }
  },

  "scripts": {

    "prepare": "npx husky || true",

    "lint-back": "npx eslint --config .eslintrc-back.js --ext .js,.cjs,.mjs ./lib/cjs/**/*",
    "lint-tests": "npx eslint --config .eslintrc-tests.js --ext .js,.cjs,.mjs ./test/**/*",
    "lint": "npm run lint-back && npm run lint-tests",

    "clean-back": "echo 'clean : not TS module",
    "clean": "npm run clean-back",

    "build-back": "npm run clean && echo 'build : not TS module'",
    "build": "npm run build-back",

    "check-requires": "npx used-deps-analyzer ./package.json ./lib/cjs --no-dev --shadows @stylistic/eslint-plugin @typescript-eslint/eslint-plugin @typescript-eslint/parser eslint eslint-plugin-n eslint-plugin-react eslint-plugin-react-hooks",
    "check-updates": "npx check-version-modules --no-fail-at-major",
    "unit-tests": "npm run build && npx nyc --reporter=html --reporter=text mocha",

    "tests": "npm run lint && npm run check-requires && npm run check-updates && npm run unit-tests"

  },
  "files": [
    "/lib/cjs"
  ],
  "engines": {
    "node": ">=22.22.0"
  },

  "dependencies": {
    "@stylistic/eslint-plugin": "5.8.0",
    "@typescript-eslint/eslint-plugin": "8.56.0",
    "@typescript-eslint/parser": "8.56.0",
    "eslint": "9.39.2",
    "eslint-plugin-n": "17.24.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1"
  },
  "devDependencies": {
    "check-version-modules": "2.2.1",
    "coveralls": "3.1.1",
    "husky": "9.1.7",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "typescript": "5.9.3",
    "used-deps-analyzer": "0.1.8"
  },
  "optionalDependencies": {
    "colors": "1.4.0"
  },

  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run unit-tests"
    }
  },
  "keywords": [
    "lint",
    "eslint",
    "tslint"
  ],
  "author": "SÃ©bastien VIDAL",
  "license": "ISC",

  "homepage": "https://github.com/Psychopoulet/eslint-plugin-personnallinter#readme",
  "repository": {
    "type": "git",
    "url": "git://github.com/Psychopoulet/eslint-plugin-personnallinter.git"
  },
  "bugs": {
    "url": "https://github.com/Psychopoulet/eslint-plugin-personnallinter/issues"
  }

}
